<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="3dp"
                    android:text="@string/timeToPass"
                    android:textColor="#3C3C3C" />

                <TextView
                    android:id="@+id/timeToPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:text="8 часов"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_language_black_24dp"
                    android:drawablePadding="3dp"
                    android:text="@string/languages"
                    android:textColor="#3C3C3C" />

                <TextView
                    android:id="@+id/languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:text="Русский, English"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_info_outline_black_24dp"
                    android:drawablePadding="3dp"
                    android:text="@string/aboutCourse"
                    android:textColor="#3C3C3C" />

                <TextView
                    android:id="@+id/descriptionDetailCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:text="Смысл жизни, следовательно, творит данный закон внешнего мира. Наряду с этим ощущение мира решительно контролирует непредвиденный гравитационный парадокс. Созерцание непредсказуемо. Сомнение рефлектирует естественный закон исключённого третьего.. Апостериори, гравитационный парадокс амбивалентно понимает под собой интеллигибельн Созерцание непредсказуемо. Дедуктивный метод решительно представляет собой бабувизм. Интеллект естественно понимает под собой интеллигибельный закон внешнего мира, открывая новые горизонты. Дедуктивный метод решительно представляет собой бабувизм. Аксиома силлогизма, по определению, представляет собой неоднозначный предмет деят"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>